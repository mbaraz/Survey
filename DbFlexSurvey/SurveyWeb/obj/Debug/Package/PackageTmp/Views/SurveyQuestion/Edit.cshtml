@model SurveyWeb.Models.SurveyQuestionEditModel

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Свойства вопроса</legend>

        
            @Html.HiddenFor(model => model.SurveyQuestionId)
            @Html.HiddenFor(model => model.ProjectName)
            @Html.HiddenFor(model => model.ProjectId)

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionText)
            @Html.ValidationMessageFor(model => model.QuestionText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Multiple)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Multiple)
            @Html.ValidationMessageFor(model => model.Multiple)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.MaxAnswers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxAnswers)
            @Html.ValidationMessageFor(model => model.MaxAnswers)
        </div>
        
         <div class="editor-label">
            @Html.LabelFor(model => model.MinAnswers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MinAnswers)
            @Html.ValidationMessageFor(model => model.MinAnswers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxRank)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxRank)
            @Html.ValidationMessageFor(model => model.MaxRank)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConditionalTagId)
        </div>
        <div class="editor-field">
             @Html.DropDownListFor(model => model.ConditionalTagId, Model.ConditionTags, new {@class = "tag-list"})
            @Html.ValidationMessageFor(model => model.ConditionalTagId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConditionalValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConditionalValue)
            @Html.ValidationMessageFor(model => model.ConditionalValue)
        </div>
        
                <div class="editor-label">
            @Html.LabelFor(model => model.BoundTagId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.BoundTagId, Model.BoundTags, new { @class = "tag-list" })
            @Html.ValidationMessageFor(model => model.BoundTagId)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.FilterAnswersTagId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.FilterAnswersTagId, Model.FilterAnswersTags, new { @class = "tag-list" })
            @Html.ValidationMessageFor(model => model.FilterAnswersTagId)
        </div>
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад", "DetailsById", new { Model.SurveyQuestionId }, "")
</div>

