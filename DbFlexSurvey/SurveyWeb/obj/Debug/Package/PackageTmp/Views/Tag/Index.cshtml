@model SurveyWeb.Models.TagListModel

@{
    ViewBag.Title = "Список переменных";
}

<h2>Переменные</h2>

<table>
    <tr>
        <th>
            Переменная
        </th>
        <th>
            Проект
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Tags) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TagName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyProject)
            </td>

        
            <td>
                @* @Html.ActionLink("Изменить", "Edit", new { Model.Tag.TagId }) | *@
                @Html.ActionLink("Подробнее", "Details", new { item.TagId }) |
                @Html.ActionLink("Удалить", "Delete", new { item.TagId })
            </td>
        </tr>
    }

</table>
@Html.Partial("Create", Model.CreateModel)