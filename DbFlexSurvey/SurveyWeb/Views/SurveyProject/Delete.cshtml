@model SurveyModel.SurveyProject

<h3>Are you sure you want to delete this?</h3>
<div class="validation-summary-errors">
@if (Model.Interviews.Any())
{
    <span>Нельзя удалить проект с интервью</span>
}
@ViewBag.DeleteError
</div>
<fieldset>
    <legend>SurveyProject</legend>

    <div class="display-label">SurveyProjectName</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SurveyProjectName)
    </div>

    <div class="display-label">ProjectUserDescription</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectUserDescription)
    </div>
</fieldset>
<p>
    @if (!Model.Interviews.Any())
    {
        using (Html.BeginForm())
        {
        
            <input type="submit" value="Delete" />
        
        }
    }
    |
    @Html.ActionLink("Back to List", "Index")
</p>